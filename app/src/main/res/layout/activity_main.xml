<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.constraintlayout.helper.widget.Flow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:constraint_referenced_ids="first_clock,second_clock,third_clock"
        app:flow_horizontalStyle="spread"
        app:flow_verticalStyle="spread"
        app:flow_wrapMode="aligned" />

    <com.example.analogclockview.AnalogClockView
        android:id="@+id/first_clock"
        android:layout_width="300dp"
        android:layout_height="300dp" />

    <com.example.analogclockview.AnalogClockView
        android:layout_width="300dp"
        android:id="@+id/second_clock"
        android:layout_height="300dp"
        app:borderColor="@color/red"
        app:handsColor="@color/white"
        app:secondsHandColor="@color/red"
        app:textColor="@color/white"
        app:watchfaceColor="@color/black" />

    <com.example.analogclockview.AnalogClockView
        android:id="@+id/third_clock"
        android:layout_width="300dp"
        android:layout_height="300dp" />
</androidx.constraintlayout.widget.ConstraintLayout>